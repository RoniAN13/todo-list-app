 <%= form_with(model: [todo_list,todo_item=todo_list.todo_items.build],id: dom_id(todo_item),class:"new-todo-item",
 data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
  <ul>
  <% f.object.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <%end%>
  </ul>

    <div class="input-group mb-4">
    <%= f.text_field :task, placeholder: "Add a new todo item",class:"form-control" %>
      <div class="input-group-append">
      <%= f.submit "Add", class: "btn btn-primary input-group-btn" %>
      </div>
    </div>
<%end%>